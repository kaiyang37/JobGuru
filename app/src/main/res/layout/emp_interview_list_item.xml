<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="15dp"
    android:layout_marginTop="25dp"
    android:background="#FFF"
    app:cardCornerRadius="2dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingTop="25dp"
        android:paddingBottom="35dp">

        <TextView
            android:id="@+id/tvJobTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Job Title"
            android:textSize="16sp"
            android:textStyle="bold" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:orientation="horizontal">
        <TextView
        android:id="@+id/applicant_name_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/applicant_name_title"
        android:textSize="14sp"
        android:textStyle="bold" />
        <TextView
            android:id="@+id/tvApplName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="Applicant Name"
            android:textSize="14sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/applicant_interview_date_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/applicant_interview_date_title"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvInterviewDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="Interview Date"
            android:textSize="14sp" />
    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/applicant_interview_time_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/applicant_interview_time_title"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvInterviewTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="Interview Time"
                android:textSize="14sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/applicant_interview_status_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/applicant_interview_status_title"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvInterviewStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="Interview Status"
                android:textSize="14sp" />
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>